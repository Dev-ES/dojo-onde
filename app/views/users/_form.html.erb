<%= form_for @user, html: { class: "form-horizontal" } do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <%= f.error_messages %>
    </div>
  <% end %>

  <div class="control-group">
    <%= label_tag(:user_name, "Nome", class: "control-label") %>
    <p class="controls"><%= f.text_field :name, class: "input-xxlarge" %></p>
  </div>

  <div class="control-group">
    <%= label_tag(:user_email, "E-mail", class: "control-label") %>
    <p class="controls"><%= f.text_field :email, class: "input-xxlarge" %></p>
  </div>

  <div class="control-group">
    <%= label_tag(:user_password, "Senha", class: "control-label") %>
    <p class="controls"><%= f.password_field :password, class: "input-xlarge" %></p>
  </div>

  <div class="control-group">
    <%= label_tag(:user_password_confirmation, "Confirmação de Senha", class: "control-label") %>
    <p class="controls"><%= f.password_field :password_confirmation, class: "input-xlarge" %></p>
  </div>

  <div class="form-actions">
    <%= f.submit 'Salvar', class: "btn btn-primary btn-large" %>
    <%= link_to 'Cancelar', root_path, class: "btn btn-inverse btn-large" %>
  </div>
<% end %>
