<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h2>Meus dados</h2>

<%= form_for @user, html: { class: "form-horizontal" } do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <ul>
      <% @user.errors.messages.each_value do |messages| %>
        <% messages.each do |value| %>
        <li><%= value %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :id %>

  <div class="control-group">
    <%= label_tag(:user_name, "Nome", class: "control-label") %>
    <p class="controls"><%= f.text_field :name, class: "input-xxlarge" %></p>
  </div>

  <div class="control-group">
    <%= label_tag(:user_email, "E-mail", class: "control-label") %>
    <p class="controls"><%= f.text_field :email, class: "input-xxlarge" %></p>
  </div>

  <div class="control-group">
    <p class="controls">
      <%= link_to "Trocar senha", password_path, class: "label" %>
    </p>
  </div>

  <div class="form-actions">
    <%= f.submit 'Salvar', class: "btn btn-primary btn-large" %>
    <%= link_to 'Cancelar', root_path, class: "btn btn-inverse btn-large" %>
  </div>
<% end %>
