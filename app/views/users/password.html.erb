<h2>Trocar senha</h2>

<%= form_for(@user, method: "put", url: { action: "change_password" }, html: { class: "form-horizontal" } ) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <%= f.error_messages %>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :password, class: "control-label" %>
    <p class="controls"><%= f.password_field :password, class: "input-xlarge" %></p>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, class: "control-label" %>
    <p class="controls"><%= f.password_field :password_confirmation, class: "input-xlarge" %></p>
  </div>

  <div class="form-actions">
    <%= f.submit 'Salvar', class: "btn btn-primary btn-large" %>
    <%= link_to 'Cancelar', root_path, class: "btn btn-inverse btn-large" %>
  </div>
<% end %>
