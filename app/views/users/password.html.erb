<h2>Trocar senha</h2>

<%= form_for(@user, method: "put", url: { action: "change_password" }, html: { class: "form-horizontal" } ) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <ul>
      <% @user.errors.messages.each_value do |messages| %>
        <% messages.each do |value| %>
        <li><%= value %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= label_tag(:user_password, "Senha Nova", class: "control-label") %>
    <p class="controls"><%= f.password_field :password, class: "input-xlarge" %></p>
  </div>

  <div class="control-group">
    <%= label_tag(:user_password_confirmation, "Confirmação de Senha", class: "control-label") %>
    <p class="controls"><%= f.password_field :password_confirmation, class: "input-xlarge" %></p>
  </div>

  <div class="form-actions">
    <%= f.submit 'Salvar', class: "btn btn-primary btn-large" %>
    <%= link_to 'Cancelar', root_path, class: "btn btn-inverse btn-large" %>
  </div>
<% end %>
