<%= form_for @dojo, html: { class: "form-horizontal" } do |f| %>
  <% if @dojo.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @dojo.errors.messages.each_value do |messages| %>
        <% messages.each do |value| %>
        <li><%= value %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= label_tag :dojo_day, "Dia", class: "control-label" %>
    <p class="controls"><%= f.text_field :day %></p>
  </div>

  <div class="control-group">
    <%= label_tag :dojo_local, "Local", class: "control-label" %>
    <p class="controls"><%= f.text_field :local %></p>
  </div>

  <div class="control-group">
    <%= label_tag :dojo_limit_people, "Limite de participantes", class: "control-label" %>
    <p class="controls"><%= f.number_field :limit_people %></p>
  </div>

  <div class="control-group">
    <%= label_tag :dojo_gmaps_link, "Link do Google Maps", class: "control-label" %>
    <p class="controls"><%= f.text_field :gmaps_link %></p>
  </div>

  <div class="control-group">
    <%= label_tag(:dojo_info, "Outras informações", class: "control-label") %>
    <p class="controls"><%= f.text_area :info, size: "34x10", class: "text_area" %></p>
  </div>

  <p class="form-actions">
    <%= f.submit 'Salvar', class: "btn btn-primary" %>
    <%= link_to 'Cancelar', root_path, class: "btn" %>
  </p>
<% end %>
