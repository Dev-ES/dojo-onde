<%= form_for(@dojo) do |f| %>
  <% if @dojo.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @dojo.errors.messages.each_value do |messages| %>
        <% messages.each do |value| %>
        <li><%= value %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :local %><br />
    <%= f.text_field :local %>
  </div>

  <div class="field">
    <label for="dojo_day">Dia</label><br />
    <%= f.text_field :day %>
  </div>

  <div class="field">
    <label for="dojo_limit_people">Limite de participantes</label><br />
    <%= f.text_field :limit_people %>
  </div>

  <div class="field">
    <label for="dojo_address">Endereço</label><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <label for="dojo_city">Cidade</label><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <label for="dojo_info">Outras informações</label><br />
    <%= f.text_area :info %>
  </div>

  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>
