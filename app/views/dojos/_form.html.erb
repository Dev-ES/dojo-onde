<%= form_for @dojo, html: { class: "form-horizontal" } do |f| %>
  <% if @dojo.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @dojo.errors.messages.each_value do |messages| %>
        <% messages.each do |value| %>
        <li><%= value %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= label_tag(:dojo_day, "Dia", class: "control-label" ) %>
    <p class="controls"><%= f.text_field :day, class: "text_field" %></p>
  </div>

  <div class="control-group">
    <%= label_tag(:dojo_limit_people, "Limite de participantes", class: "control-label" ) %>
    <p class="controls"><%= f.text_field :limit_people, class: "number_field" %></p>
  </div>

  <%= f.fields_for :local, @dojo.local  do |lc| %>
    <%= lc.hidden_field :id %>
    <div class="control-group">
      <%= label_tag(:dojo_local_attributes_name, "Local", class: "control-label") %>
      <p class="controls"><%= lc.text_field :name, class: "text_field" %></p>
    </div>

    <div class="control-group">
      <%= label_tag(:dojo_local_attributes_address, "Endereço", class: "control-label" ) %>
      <p class="controls"><%= lc.text_field :address, class: "text_field" %></p>
    </div>

    <div class="control-group">
      <%= label_tag(:dojo_local_attributes_city, "Cidade", class: "control-label") %>
      <p class="controls"><%= lc.text_field :city, class: "text_field" %></p>
    </div>
  <% end %>

  <div class="control-group">
    <%= label_tag(:dojo_info, "Outras informações", class: "control-label") %>
    <p class="controls"><%= f.text_area :info, size: "34x10", class: "text_area" %></p>
  </div>

  <p class="form-actions">
    <%= f.submit 'Salvar', class: "btn btn-primary" %>
    <%= link_to 'Cancelar', root_path, class: "btn" %>
  </p>
<% end %>
