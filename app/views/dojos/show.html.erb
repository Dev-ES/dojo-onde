<% if flash[:notice] %>
  <p class="alert alert-success"><%= flash[:notice] %></p>
<% end %>

<h2><%= @dojo %></h2>

<div class="row">
  <div class="span3">
    <p>
    <strong>Outras informações:</strong><br />
    <%= @dojo.info.gsub(/\n/,"<br />").html_safe %>
    </p>
  </div>

  <iframe class="span7" height="350" frameborder="0" 
          marginheight="0" marginwidth="0" src="<%= @dojo.gmaps_link.html_safe %>&output=embed">
  </iframe>
</div>

<%= link_to 'Voltar', dojos_path, class: "btn btn-large" %>
